#! /bin/bash

declare -A colors
colors=(
	["red"]="\033[31m"
	["blue"]="\033[34m"
	["green"]="\033[32m"
	["purple"]="\033[35m"
	["brown"]="\033[33m"
	["yellow"]="\033[1;33m"
	["cyan"]="\033[36m"
	["pink"]="\033[35;1m"
	["reset"]="\033[0m"
)

say () {
	echo -e "${colors['purple']}ÔêÜ  Doom${colors['reset']}: $1"
}

say "Copying files..."
mkdir -p ~/.config/nvim/
cp ~/doom-neovim/* ~/.config/nvim/

say "Installing required packages Neovim and Python3..."

sudo apt-get update
sudo apt-get install nvim python3

say "Installed, moving on..."

say "Installing Vim Plug..."

sh -c 'curl -fLo "${XDG_DATA_HOME:-$HOME/.local/share}"/nvim/site/autoload/plug.vim --create-dirs \
       https://raw.githubusercontent.com/junegunn/vim-plug/master/plug.vim'

say "Installed, moving on..."

say "Installing neovim plugins..."

nvim -c ":PlugInstall"

say "Installed, moving on..."

say "Compiling YouCompleteMe libraries..."

python3 ~/.config/nvim/plugins/YouCompleteMe/install.py --all

say "Done!"

say "Doom Neovim is successfully! Launch it now by typing \`nvim\`!"
